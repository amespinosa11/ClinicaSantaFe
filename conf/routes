# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count()
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#######PACIENTE############################
#Crear Paciente
POST /paciente                 controllers.PacienteController.create()

#Dar pacientes
GET /paciente                   controllers.PacienteController.read()

#Eliminar paciente
DELETE /paciente/:id            controllers.PacienteController.delete(id:Long)

#Actualizar paciente
PUT /paciente/:id            controllers.PacienteController.update(id:Long)

#Dar por paciente por id
GET /paciente/:id           controllers.PacienteController.getById(id:Long)

###########MEDICO##############################
#Crear Medico
POST /medico                controllers.MedicoController.create()

#Dar medicos
GET /medico                controllers.MedicoController.read()

#Eliminar medico
DELETE /medico/:id          controllers.MedicoController.delete(id:Long)

#Actualizar medico
PUT /medico/:id             controllers.MedicoController.update(id:Long)

#Dar medico por id
GET /medico/:id             controllers.MedicoController.getById(id:Long)

############MEDICOESPECIALISTA###################
#Crear Medico Especialista
POST /medicoespecialista    controllers.MedicoEspecialistaController.create()

#Dar Medicos Especialistas
GET /medicoespecialista        controllers.MedicoEspecialistaController.read()

#Eliminar Medico Especialista
DELETE /medicoespecialista/:id  controllers.MedicoEspecialistaController.delete(id:Long)

#Actualizar medico Especialista
PUT /medicoespecialista/:id     controllers.MedicoEspecialistaController.update(id:Long)

#Dar medico especialista por id
GET /medicoespecialista/:id     controllers.MedicoEspecialistaController.getById(id:Long)

##### URGENCIA ######
#Crear Urgencia
POST /urgencia                 controllers.UrgenciaController.create()

#Dar urgencias
GET /urgencia                   controllers.UrgenciaController.read()

#Eliminar urgencia
DELETE /urgencia/:id            controllers.UrgenciaController.delete(id:Long)

#Actualizar urgencia
PUT /urgencia/:id            controllers.UrgenciaController.update(id:Long)

#Dar urgencia por id
GET /urgencia/:id           controllers.UrgenciaController.getById(id:Long)

##### REGISTRO ######

#Crear Registro
POST /registro/:id            controllers.RegistroController.create(id:Long)

#Dar Resgistro
GET /registro/:id                controllers.RegistroController.read(id:Long)

#Eliminar Registro

DELETE /registro/:id        controllers.RegistroController.delete(id:Long)

#Actualizar registro

PUT /registro/:id             controllers.RegistroController.update(id:Long)

#Dar Registro por Id

GET /registro/:id              controllers.RegistroController.getById(id:Long)

##########CONSEJO################

#Crear Consejo
POST /consejo            controllers.ConsejoController.create()

#Dar Consejo
GET /consejo               controllers.ConsejoController.read()

#Eliminar Consejo

DELETE /consejo/:id        controllers.ConsejoController.delete(id:Long)

#Actualizar consejo

PUT /consejo/:id             controllers.ConsejoController.update(id:Long)

#Dar consejo por Id

GET /consejo/:id              controllers.ConsejoController.getById(id:Long)



############ REGISTROS DE PACIENTE ####################
#Crea un registro para un paciente
POST /paciente/:pid/registro     controllers.PacienteController.createRegistroDePaciente(pid:Long)

#Da los registros de un paciente
GET /paciente/:pid/registro      controllers.PacienteController.readRegistrosDePaciente(pid:Long)

